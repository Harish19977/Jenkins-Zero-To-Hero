pipeline {
    agent any

    environment {
        IMAGE_NAME = "hello-world-java"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-8'
                }
            }
            steps {
                dir('hello-world3') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'maven:3.9.6-eclipse-temurin-8'
                }
            }
            steps {
                dir('hello-world3') {
                    sh 'mvn test'
                }
            }
        }

        stage('Docker Build') {
            agent {
                docker {
                    image 'docker:24.0.5'
                    args '--entrypoint="" -v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                dir('hello-world3') {
                    sh 'docker build -t $IMAGE_NAME:latest .'
                }
            }
        }

        stage('Deploy') {
            agent {
                docker {
                    image 'docker:24.0.5'
                    args '--entrypoint="" -v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                dir('hello-world3') {
                    sh '''
                    docker rm -f hello-world-container || true
                    docker run -d --name hello-world-container $IMAGE_NAME:latest
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully üöÄ"
        }
        failure {
            echo "Pipeline failed ‚ùå"
        }
    }
}
