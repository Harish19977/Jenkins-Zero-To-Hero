pipeline {
    agent {
        docker {
            image 'maven:3.9.6-eclipse-temurin-8'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        IMAGE_NAME = "hello-world-java"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t $IMAGE_NAME:latest .'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                docker rm -f hello-world-container || true
                docker run --name hello-world-container $IMAGE_NAME:latest
                '''
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully üöÄ"
        }
        failure {
            echo "Pipeline failed ‚ùå"
        }
    }
}
