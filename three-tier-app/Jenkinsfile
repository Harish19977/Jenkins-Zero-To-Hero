pipeline {
    agent any

    environment {
        FRONTEND_IMAGE = "frontend-app:latest"
        BACKEND_IMAGE  = "backend-app:latest"
        DB_IMAGE       = "mysql:8.0"
        NETWORK_NAME   = "three-tier-net"
    }

    stages {

        stage('Verify Docker') {
            steps {
                sh 'docker version'
            }
        }

        stage('Create Network') {
            steps {
                sh '''
                  docker network inspect $NETWORK_NAME >/dev/null 2>&1 || \
                  docker network create $NETWORK_NAME
                '''
            }
        }

        stage('Build Frontend Image') {
            steps {
                sh '''
                  cd three-tier-app/frontend
                  docker build -t $FRONTEND_IMAGE .
                '''
            }
        }

        stage('Build Backend Image') {
            steps {
                sh '''
                  cd three-tier-app/backend
                  docker build -t $BACKEND_IMAGE .
                '''
            }
        }

        stage('Run Database') {
            steps {
                sh '''
                  docker rm -f mysql-db || true
                  docker run -d \
                    --name mysql-db \
                    --network $NETWORK_NAME \
                    -e MYSQL_ROOT_PASSWORD=root \
                    -e MYSQL_DATABASE=appdb \
                    mysql:8.0
                '''
            }
        }

        stage('Run Backend') {
            steps {
                sh '''
                  docker rm -f backend-app || true
                  docker run -d \
                    --name backend-app \
                    --network $NETWORK_NAME \
                    -p 8081:8080 \
                    $BACKEND_IMAGE
                '''
            }
        }

        stage('Run Frontend') {
            steps {
                sh '''
                  docker rm -f frontend-app || true
                  docker run -d \
                    --name frontend-app \
                    --network $NETWORK_NAME \
                    -p 80:80 \
                    $FRONTEND_IMAGE
                '''
            }
        }
    }

    post {
        success {
            echo "✅ 3-Tier Application Deployed Successfully"
        }
        failure {
            echo "❌ Pipeline Failed"
        }
    }
}
