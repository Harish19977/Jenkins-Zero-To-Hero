pipeline {
    agent {
        docker {
            image 'docker:24.0.5'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        FRONTEND_IMAGE = "frontend-app:latest"
        BACKEND_IMAGE  = "backend-app:latest"
        DB_IMAGE       = "mysql:8.0"
    }

    stages {

        stage('Verify Workspace') {
            steps {
                sh '''
                  echo "Workspace content:"
                  ls -l
                '''
            }
        }

        stage('Build Frontend Image') {
            steps {
                sh '''
                  cd frontend
                  docker build -t $FRONTEND_IMAGE .
                '''
            }
        }

        stage('Build Backend Image') {
            steps {
                sh '''
                  cd backend
                  docker build -t $BACKEND_IMAGE .
                '''
            }
        }

        stage('Run Database') {
            steps {
                sh '''
                  docker rm -f mysql-db || true
                  docker run -d \
                    --name mysql-db \
                    -e MYSQL_ROOT_PASSWORD=root \
                    -e MYSQL_DATABASE=appdb \
                    -p 3306:3306 \
                    $DB_IMAGE
                '''
            }
        }

        stage('Run Backend') {
            steps {
                sh '''
                  docker rm -f backend-app || true
                  docker run -d \
                    --name backend-app \
                    -p 8080:8080 \
                    $BACKEND_IMAGE
                '''
            }
        }

        stage('Run Frontend') {
            steps {
                sh '''
                  docker rm -f frontend-app || true
                  docker run -d \
                    --name frontend-app \
                    -p 80:80 \
                    $FRONTEND_IMAGE
                '''
            }
        }
    }

    post {
        success {
            echo "✅ 3-tier application deployed successfully"
        }
        failure {
            echo "❌ Pipeline failed"
        }
    }
}
